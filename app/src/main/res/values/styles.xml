<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint and error styles -->
        <item name="android:textColor">#4e4b52</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#16A6D8</item>
        <item name="colorControlNormal">#DADAEA</item>
        <item name="colorControlActivated">#16A6D8</item>
        <item name="colorControlHighlight">#16A6D8</item>
    </style>
    <style name="EditText">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#16A6D8</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
